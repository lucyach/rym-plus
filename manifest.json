{
  "manifest_version": 3,
  "name": "RYM Plus",
  "version": "1.0.0",
  "description": "Enhanced features for RateYourMusic.com",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.rateyourmusic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.rateyourmusic.com/*"],
      "js": [
        "src/features/issues.js",
        "src/features/ratingsView.js", 
        "src/features/ratingDescriptions.js",
        "src/features/buttonStyling.js",
        "src/content.js"
      ],
      "css": ["src/styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "RYM Plus"
  },
  "background": {
    "service_worker": "src/background.js"
  }
}