{
  "manifest_version": 3,
  "name": "RYM Plus",
  "version": "1.0.0",
  "description": "Enhanced features for RateYourMusic.com",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.rateyourmusic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.rateyourmusic.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "RYM Plus"
  },
  "background": {
    "service_worker": "background.js"
  }
}